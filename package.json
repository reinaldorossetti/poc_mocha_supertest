{
  "name": "poc-mocha-supertest",
  "version": "1.0.1",
  "private": true,
  "description": "Exemplo de estrutura de automação de API feita com Supertest e Mocha",
  "author": "Rei",
  "scripts": {
    "test.local": "cross-env AMBIENTE='local' mocha -R allure-mocha --retries 1",
    "test.prod": "cross-env AMBIENTE='producao' mocha --config .mocharcMochawesome.js --retries 1",
    "test.ci": "cross-env AMBIENTE='producao' mocha --config .mocharcAllure.js --retries 1",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "devDependencies": {
    "@hapi/joi": "^17.1.1",
    "allure-commandline": "^2.21.0",
    "allure-mocha": "^2.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "dirty-chai": "^2.0.1",
    "faker": "^4.1.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "nyc": "^15.1.0",
    "standard": "^14.3.3",
    "supertest": "^4.0.2"
  },
  "standard": {
    "globals": [
      "beforeEach",
      "describe",
      "it",
      "request",
      "expect",
      "allure",
      "faker"
    ]
  }
}
